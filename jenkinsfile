pipeline {
    agent any

    tools {
       nodejs 'NodeJS'
    }

    stages {
        stage('Checkout') {
            steps {
                echo 'Cloning repository...'
                checkout scmGit(branches: [[name: '*/dev']], userRemoteConfigs: [[credentialsId: 'Git', url: 'https://github.com/Nunu86/react-weather.git']])
            }
            
        }
         stage('Installing dependencies') {
            steps {
                echo 'üì¶ Installing Node.js dependencies...'
                sh 'npm install'                
            }            
        }
    }

    post {
        always {
            echo "üßπ Cleaning up workspace..."
            cleanWs()
        }
        success {
            echo "‚úÖ Build and deploy completed successfully!"
        }
        failure {
            echo "‚ùå Build or deployment failed. Check logs for details."
        }
    }
}
