pipeline {
    agent any

    environment {
        // Define environment variables if needed
       
    }

    stages {
        stage('Checkout') {
            steps {
                echo 'Cloning repository...'
                checkout scmGit(branches: [[name: '*/master']], userRemoteConfigs: [[credentialsId: 'Git', url: 'https://github.com/Nunu86/react-weather.git']])
            }
        }

       post {
        always {
            echo "üßπ Cleaning up workspace..."
            cleanWs()
        }
        success {
            echo "‚úÖ Build and deploy completed successfully!"
        }
        failure {
            echo "‚ùå Build or deployment failed. Check logs for details."
        }
    }
}

